<h2>ユーザー一覧</h2>

<table>
  <tr>
    <th>ユーザーアイコン</th>
    <th>ユーザー名</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= image_tag(user.icon.resize_for_user_icon.url) if user.icon && user.icon.url %></td>
    <td><%= user.name %></td>
    <td><%= link_to "ユーザー詳細", user_path(user.id) %></td>
    <td><%= link_to "ユーザー編集", edit_user_path(user.id) %></td>
    <td><%= link_to 'ユーザー削除', user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>
</table>

<%= link_to 'トップ画面に戻る', root_path %>
<%= link_to '新規ユーザー追加', new_user_path %>