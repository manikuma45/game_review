<h3>気になる一覧</h3>

<table class="table">
  <tr>
    <th>気になる登録したユーザー</th>
    <th>気になるゲームタイトル</th>
  </tr>

  <% @favorites.each do |favorite| %>
    <tr>
      <td><%= link_to "#{favorite.user.name}さん", admin_user_path(favorite.user_id) %>が</td>
      <td><%= link_to favorite.game.title, admin_game_path(favorite.game_id) %>を気になる登録しました</td>
    </tr>
  <% end %>
</table>

<%= link_to 'トップ画面', admin_root_path, class: "btn btn-primary mr-3"  %>