<%= search_form_for @q do |form| %>
  <div class="form-inline">
    <div class="form-group">
      <%= form.label :title_or_company, "タイトルまたは販売会社" %> : 
      <%= form.search_field :title_or_company_cont, include_blank: true, class: "search_title_or_company_form form-control" %>, 
    </div>

    <div class="form-group">
      <%= form.label :price, class: 'form-group' %> : 
      <%= form.number_field :price_gteq, min: 0, include_blank: true, class: 'form-control' %>以上〜
      <%= form.number_field :price_lt, min: 0, max: 100000, include_blank: true, class: 'form-control' %>未満
    </div>

    <br>

    <div class="form-group">
      <%= form.label :genre, class: 'form-group' %> : 
      <%= form.select :genre_eq, Game.genres.map {|k, v| [Game.genres_i18n[k], v]}, include_blank: true, class: 'form-control' %>, 
    </div>
    
    <div class="form-group">
      <%= form.label :released_at, class: 'form-group' %> : 
      <%= form.date_field :released_at_gteq, include_blank: true, class: 'form-control' %>〜
      <%= form.date_field :released_at_lteq, include_blank: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "検索", class: 'btn btn-primary' %>
      <%= link_to 'クリア', games_path, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>


<h3>ゲームタイトル一覧</h3>
<table class="table" id="fixed">
  <tr>
    <th><%= sort_link(@q, :title, "タイトル", default_order: :asc) %></th>
    <th><%= sort_link(@q, :company, "販売会社", default_order: :asc) %></th>
    <th><%= sort_link(@q, :released_at, "発売日", default_order: :desc) %></th>

    <th><%= link_to games_path(order_by_direction: true) do %>グラフィック<br>・サウンド<% end %></th>
    <th><%= link_to games_path(order_by_operability: true) do %>操作性<br>・ロード<% end %></th>
    <th><%= link_to games_path(order_by_story: true) do %>ストーリー<br>・世界観<% end %></th>
    <th><%= link_to games_path(order_by_volume: true) do %>ボリューム・<br>やりこみ要素<% end %></th>
    <th><%= link_to "ハマり度", games_path(order_by_like: true) %></th>
    <th><%= link_to "総合点数", games_path(order_by_sum: true) %></th>
    <th><%= link_to "レビュー件数", games_path(order_by_reviews: true) %></th>
    <th></th>

  </tr>

<% @games.each do |game| %>
  <tr class="game_row">
    <td colspan="2"><%= image_tag(game.icon.resize_for_game_icon.url) if game.icon && game.icon.url %><br><strong><%= game.title %></strong><br>from <%= game.company %></td>
    <td class="display_center"><%= game.released_at %></td>
    <td class="display_center"><%= game.reviews.sum(:direction) * 5 / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= game.reviews.sum(:operability) * 5 / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= game.reviews.sum(:story) * 5 / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= game.reviews.sum(:volume) * 5 / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= game.reviews.sum(:like) * 5 / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= (game.reviews.sum(:direction) + game.reviews.sum(:operability) + game.reviews.sum(:story) + game.reviews.sum(:volume) + game.reviews.sum(:like)) / game.reviews.count if game.reviews.present? %>点</td>
    <td class="display_center"><%= game.reviews.count %>件</td>
    <td class="display_center"><%= link_to "詳細", game_path(game.id), class: "btn btn-primary mr-3" %></td>
  </tr>
<% end %>
</table>

<%= paginate @games %>